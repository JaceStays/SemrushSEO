# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript image/svg+xml
</IfModule>

# Leverage browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/html "access plus 1h"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/gif "access plus 6 months"
  ExpiresByType image/webp "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"
  ExpiresByType font/woff2 "access plus 6 months"
  ExpiresByType font/woff "access plus 6 months"
  ExpiresByType application/font-woff2 "access plus 6 months"
  ExpiresByType application/font-woff "access plus 6 months"
</IfModule>

# Set cache-control headers for static assets
<FilesMatch "\.(css|js)$">
  <IfModule mod_headers.c>
    Header set Cache-Control "public, max-age=2592000"
  </IfModule>
</FilesMatch>
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|woff2|woff)$">
  <IfModule mod_headers.c>
    Header set Cache-Control "public, max-age=15552000, immutable"
  </IfModule>
</FilesMatch>

# Ensure index.php is the default
DirectoryIndex index.php index.html

# Force HTTPS and non-www host
RewriteEngine On
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\.semrush\.review$ [NC]
RewriteRule ^ https://semrush.review%{REQUEST_URI} [L,R=301]


